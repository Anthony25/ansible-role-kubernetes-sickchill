apiVersion: extensions/v1beta1
kind: Ingress
metadata:
  name: {{ kubernetes_sickrage_ingress.name }}
  namespace: {{ kubernetes_sickrage_namespace }}
{% if kubernetes_sickrage_ingress.annotations %}
  annotations:
    {{ kubernetes_sickrage_ingress.annotations | to_nice_yaml | indent }}
{% endif %}
spec:
{% if kubernetes_sickrage_ingress.tls %}
  tls:
    {{ kubernetes_sickrage_ingress.tls | to_nice_yaml | indent }}
{% endif %}
  rules:
  - host: {{ kubernetes_sickrage_ingress.host }}
    http:
      paths:
      - path: /
        backend:
          serviceName: {{ kubernetes_sickrage_service }}
          servicePort: 80
